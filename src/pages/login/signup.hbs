<div class="loginPage">
    <span class="enter">Регистрация</span>
    <form action="#/chat" method="post" class="inputForm">
        <div class="input">
            <input type="text" name="first_name" id="first_name" placeholder="Имя">
            <input type="text" name="second_name" id="second_name" placeholder="Фамилия">
            <input type="text" name="email" id="email" placeholder="Почта">
            <input type="phone" name="phone" id="phone" placeholder="Телефон">
            <input type="text" name="login" id="login" placeholder="Логин">
            <input type="password" name="password" id="password" placeholder="Пароль">
        </div>
        <div class="loginControls">
            <button type="submit" class="submitButton">Зарегистрироваться</button>
            <a href="#/login" class="redirect">Войти</a>
        </div>
    </form>
</div>