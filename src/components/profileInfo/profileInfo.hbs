<div>
    <div class="profileInfo">
        <div class="profileInfoElement email">
            Почта
            {{#if true}}
                {{{ emailInput }}}
            {{else}}
                <span>{{{ email }}}</span>
            {{/if}}
        </div>
        <div class="profileInfoElement login">
            Логин
            {{#if true}}
                {{{ loginInput }}}
            {{else}}
                <span>{{{ login }}}</span>
            {{/if}}
        </div>
        <div class="profileInfoElement firstName">
            Имя
            {{#if true}}
                {{{ firstNameInput }}}
            {{else}}
                <span>{{{ firstName }}}</span>
            {{/if}}
        </div>
        <div class="profileInfoElement secondName">
            Фамилия
            {{#if true}}
                {{{ secondNameInput }}}
            {{else}}
                <span>{{{ secondName }}}</span>
            {{/if}}
        </div>
        <div class="profileInfoElement nickname">
            Имя в чате
            {{#if true}}
                {{{ nicknameInput }}}
            {{else}}
                <span>{{{ nickname }}}</span>
            {{/if}}
        </div>
        <div class="profileInfoElement phone">
            Телефон
            {{#if true}}
                {{{ phoneInput }}}
            {{else}}
                <span>{{{ phone }}}</span>
            {{/if}}
        </div>
    </div>
    <div class="profileControls">
        {{#if true}}
            {{{ submitButton }}}
        {{else}}
            <div class="profileInfoElement">
                <span class="editInfo" role="button">Изменить данные</span>
            </div>
            <div class="profileInfoElement">
                <span class="editInfo" role="button">Изменить пароль</span>
            </div>
            <div class="profileInfoElement">
                <span class="signout" role="button">Выйти</span>
            </div>
        {{/if}}
    </div>
</div>
